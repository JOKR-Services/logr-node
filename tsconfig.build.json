{
  "extends": "./tsconfig",
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "strictBindCallApply": true,
    "alwaysStrict": true,
    "paths": {
      "@utils/*": ["lib/utils/*"],
      "@core/*": ["lib/core/*"],
      "@infra/*": ["lib/infra/*"]
    }
  },
  "exclude": ["**/*.test.ts", "fixtures", "src/lib/examples", "./node_modules/*"]
}